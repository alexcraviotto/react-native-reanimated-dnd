{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "outDir": "./lib",
    "rootDir": "./",
    "jsx": "react",
    "module": "ES2015",
    "types": ["node"],
    "stripInternal": true,
    "noEmitHelpers": true,
    "importHelpers": false
  },
  "include": [
    "components/**/*",
    "context/**/*",
    "hooks/**/*",
    "types/**/*",
    "index.ts"
  ],
  "exclude": ["node_modules", "lib", "**/*.test.ts", "**/*.test.tsx"]
}
